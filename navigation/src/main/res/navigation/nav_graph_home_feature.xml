<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_graph_home_feature"
  app:startDestination="@id/homeFragment">

  <!-- HOME FRAGMENT -->
  <fragment
    android:id="@+id/homeFragment"
    android:name="com.harsh.home.HomeFragment"
    android:label="Mercai">

    <!-- Go to Detail Fragment (Its graph is responsible to handle response) -->
    <action
      android:id="@+id/action_homeFragment_to_productFragment"
      app:destination="@id/addProductFragment">
      <argument
        android:name="add"
        app:argType="string" />
    </action>
  </fragment>

  <fragment
    android:id="@+id/addProductFragment"
    android:name="com.harsh.home.CategoryFragment"
    android:label="Add Product" />

</navigation>